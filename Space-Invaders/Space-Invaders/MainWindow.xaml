<Window x:Class="Space_Invaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Invaders"
        mc:Ignorable="d"
        Title="Space Invaders" Height="500" Width="800" Background="#29292A">
    <Canvas x:Name="MainCanvas">
        <Label x:Name="ScoreLabel" FontSize="20" Foreground="White"/>
        <Button Width="200" Height="100" FontSize="44" FontFamily="Arial" Background="DarkGray" 
            Click="Start" x:Name="StartButton" Canvas.Left="300" Canvas.Top="200" Content="START"/>
    </Canvas>
</Window>
